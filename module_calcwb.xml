<?xml version="1.0" encoding="UTF-8"?>
<project name="module_calcwb" default="compile.module.calcwb">
  <dirname property="module.calcwb.basedir" file="${ant.file.module_calcwb}"/>
  
  <property name="module.jdk.home.calcwb" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.calcwb" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.calcwb" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.calcwb" value="-encoding UTF-8 -source 8 -target 8 ${compiler.args}"/>
  
  <property name="calcwb.output.dir" value="${module.calcwb.basedir}/bin"/>
  <property name="calcwb.testoutput.dir" value="${module.calcwb.basedir}/bin"/>
  
  <path id="calcwb.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="calcwb.module.production.classpath">
    <path refid="${module.jdk.classpath.calcwb}"/>
    <pathelement location="${idea.home}/lib/junit-4.12.jar"/>
    <path refid="library.assertj-core-3.3.0.classpath"/>
    <path refid="library.hamcrest-core-1.3.classpath"/>
    <path refid="library.assertj-swing-3.2.0.classpath"/>
    <path refid="library.fest-util-1.2.5.classpath"/>
    <path refid="library.junit-4.10.classpath"/>
  </path>
  
  <path id="calcwb.runtime.production.module.classpath">
    <pathelement location="${calcwb.output.dir}"/>
    <pathelement location="${idea.home}/lib/junit-4.12.jar"/>
    <path refid="library.assertj-core-3.3.0.classpath"/>
    <path refid="library.hamcrest-core-1.3.classpath"/>
    <path refid="library.assertj-swing-3.2.0.classpath"/>
    <path refid="library.fest-util-1.2.5.classpath"/>
    <path refid="library.junit-4.10.classpath"/>
  </path>
  
  <path id="calcwb.module.classpath">
    <path refid="${module.jdk.classpath.calcwb}"/>
    <pathelement location="${calcwb.output.dir}"/>
    <pathelement location="${idea.home}/lib/junit-4.12.jar"/>
    <path refid="library.assertj-core-3.3.0.classpath"/>
    <path refid="library.hamcrest-core-1.3.classpath"/>
    <path refid="library.assertj-swing-3.2.0.classpath"/>
    <path refid="library.fest-util-1.2.5.classpath"/>
    <path refid="library.junit-4.10.classpath"/>
  </path>
  
  <path id="calcwb.runtime.module.classpath">
    <pathelement location="${calcwb.output.dir}"/>
    <pathelement location="${idea.home}/lib/junit-4.12.jar"/>
    <path refid="library.assertj-core-3.3.0.classpath"/>
    <path refid="library.hamcrest-core-1.3.classpath"/>
    <path refid="library.assertj-swing-3.2.0.classpath"/>
    <path refid="library.fest-util-1.2.5.classpath"/>
    <path refid="library.junit-4.10.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.calcwb">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.calcwb">
    <patternset refid="excluded.from.module.calcwb"/>
  </patternset>
  
  <path id="calcwb.module.sourcepath">
    <dirset dir="${module.calcwb.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  <path id="calcwb.module.test.sourcepath">
    <dirset dir="${module.calcwb.basedir}">
      <include name="Test"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.calcwb" depends="compile.module.calcwb.production,compile.module.calcwb.tests" description="Compile module CalcWB"/>
  
  <target name="compile.module.calcwb.production" depends="register.custom.compilers" description="Compile module CalcWB; production classes">
    <mkdir dir="${calcwb.output.dir}"/>
    <javac2 destdir="${calcwb.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.calcwb}/javac">
      <compilerarg line="${compiler.args.calcwb}"/>
      <bootclasspath refid="calcwb.module.bootclasspath"/>
      <classpath refid="calcwb.module.production.classpath"/>
      <src refid="calcwb.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.calcwb"/>
    </javac2>
    
    <copy todir="${calcwb.output.dir}">
      <fileset dir="${module.calcwb.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.calcwb.tests" depends="register.custom.compilers,compile.module.calcwb.production" description="compile module CalcWB; test classes" unless="skip.tests">
    <mkdir dir="${calcwb.testoutput.dir}"/>
    <javac2 destdir="${calcwb.testoutput.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.calcwb}/javac">
      <compilerarg line="${compiler.args.calcwb}"/>
      <bootclasspath refid="calcwb.module.bootclasspath"/>
      <classpath refid="calcwb.module.classpath"/>
      <src refid="calcwb.module.test.sourcepath"/>
      <patternset refid="excluded.from.compilation.calcwb"/>
    </javac2>
    
    <copy todir="${calcwb.testoutput.dir}">
      <fileset dir="${module.calcwb.basedir}/Test">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="clean.module.calcwb" description="cleanup module">
    <delete dir="${calcwb.output.dir}"/>
    <delete dir="${calcwb.testoutput.dir}"/>
  </target>
</project>